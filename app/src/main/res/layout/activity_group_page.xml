<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dalexi1312.studygroupfinder.GroupPage">

    <TextView
        android:text="Group Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/groupNameTextView"
        android:textSize="24sp"/>

    <TextView
        android:text="Meet up Location: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meetUpLocationtextView"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/groupNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_height="45dp"
        app:srcCompat="@drawable/addicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/GroupIconImageView"
        android:layout_width="40dp"/>

    <TextView
        android:text="Members:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meetUpLocationtextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/showmemberstextView"/>

    <TextView
        android:text="MeetupTime: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meetUpSpotTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/thisIsTheTextViewThatSaysMeetUpTime"/>

    <TextView
        android:text="6:30pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thisIsTheTextViewThatSaysMeetUpTime"
        android:layout_toRightOf="@+id/thisIsTheTextViewThatSaysMeetUpTime"
        android:layout_toEndOf="@+id/thisIsTheTextViewThatSaysMeetUpTime"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/meetUpTimeTextView"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meetUpSpotTextView"
        android:layout_alignBaseline="@+id/meetUpLocationtextView"
        android:layout_alignBottom="@+id/meetUpLocationtextView"
        android:layout_toRightOf="@+id/meetUpTimeTextView"
        android:layout_toEndOf="@+id/meetUpTimeTextView"/>

    <TextView
        android:text="here we will show group members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupmemberslhereTextView"
        android:layout_alignBaseline="@+id/showmemberstextView"
        android:layout_alignBottom="@+id/showmemberstextView"
        android:layout_alignLeft="@+id/meetUpTimeTextView"
        android:layout_alignStart="@+id/meetUpTimeTextView"/>

</RelativeLayout>
