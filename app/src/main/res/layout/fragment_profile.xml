<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.dalexi1312.studygroupfinder.Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="0dp"
        android:id="@+id/tabLayout"
        android:textAllCaps="false"
        app:tabSelectedTextColor="?attr/colorControlNormal"
        app:tabIndicatorColor="@android:color/transparent">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:icon="@drawable/ic_search_grey_600_24dp"
            android:id="@+id/browseTabButton"
            android:clickable="true"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Groups"
            android:icon="@drawable/people"
            android:id="@+id/myGroupsTabButton"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:icon="@drawable/ic_account_circle_grey_600_24dp"
            android:id="@+id/profileTabButton"/>
    </android.support.design.widget.TabLayout>

    <ImageView
        android:layout_width="90dp"
        app:srcCompat="@drawable/coo"
        android:id="@+id/profileImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>

    <TextView
        android:text="David Gabay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/profileNameTextView"/>

    <TextView
        android:text="FAU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/schoolProfileTextView"/>

    <TextView
        android:text="dgabay2015@fau.edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schoolProfileTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/profileEmailTextView"/>
</RelativeLayout>
