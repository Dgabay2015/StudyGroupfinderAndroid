<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"

                tools:background="@color/com_facebook_button_login_silver_background_color_pressed">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/gravatarImageView"
        android:background="@color/faublue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupNameTextView"
        android:textColor="@color/faublue"
        tools:text="Super studiers CEN4010"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gravatarImageView"
        android:layout_toEndOf="@+id/gravatarImageView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:maxLength="14"/>

    <TextView
        android:text="Groupmembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/groupNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/amountOfGroupMembersTextView"
        android:textSize="10sp"/>

</RelativeLayout>